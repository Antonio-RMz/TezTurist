<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_atoluca_actividades"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="30dp"

    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:id="@+id/img_atoluca_actividad"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_nombre_actividad_atuluca"
            android:text="Nombre "
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/md_theme_dark_scrim"
            android:layout_toRightOf="@+id/img_atoluca_actividad"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_descripcion_actividad_attoluca"
            android:text="Curso"
            android:layout_below="@id/txt_nombre_actividad_atuluca"
            android:textSize="25sp"
            android:textColor="@color/md_theme_dark_scrim"
            android:layout_toRightOf="@+id/img_atoluca_actividad"
            android:layout_marginLeft="10dp"/>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
